@page
@model IndexModel
@{
    ViewData["Title"] = "Calculator";
}

<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/calculator.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mathjs/11.1.0/math.min.js"></script>
    <script type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.7/MathJax.js?config=TeX-MML-AM_CHTML"></script>
    <script src="~/js/calculator.js" defer></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container" id="calculator">
        <div class="leftSide">
            <input type="text" id="output" disabled="true">
            <input type="text" id="input" placeholder="Input">

            <div class="modeButtons">
                <div class="angleFormat">
                    <button id="radButton" class="leftButton">RAD</button>
                    <button id="degButton" class="rightButton">DEG</button>
                </div>

                <div class="fracDec">
                    <button id="fracButton" class="leftButton">FRAC</button>
                    <button id="deciButton" class="rightButton">DEC</button>
                </div>

                <div class="numSys">
                    <button id="binButton" class="leftButton">BIN</button>
                    <button id="octButton" class="middleButton">OCT</button>
                    <button id="hexButton" class="middleButton">HEX</button>
                    <button id="decButton" class="rightButton">DEC</button>
                </div>
            </div>

            <div class="buttons">
                <div class="complexButtons">
                    <button>x!</button>
                    <button>nPr</button>
                    <button>nCr</button>
                    <button>%</button>
                    <button>π</button>
                    <button>abs</button>

                    <button>(-)</button>
                    <button>&#8730;x</button>
                    <button>∛x</button>
                    <button>x<sup>2</sup></button>
                    <button>x<sup>Y</sup></button>
                    <button>x<sup>-1</sup></button>

                    <button>sin</button>
                    <button>cos</button>
                    <button>tan</button>
                    <button>log</button>
                    <button>ln</button>
                    <button>e<sup>x</sup></button>

                    <button>sinh</button>
                    <button>cosh</button>
                    <button>tanh</button>
                    <button>sin<sup>-1</sup></button>
                    <button>cos<sup>-1</sup></button>
                    <button>tan<sup>-1</sup></button>
                </div>

                <div class="basicButtons">
                    <button>(-)</button>
                    <button>M+</button>
                    <button>M</button>
                    <button>(</button>
                    <button>)</button>

                    <button class="greyButton">7</button>
                    <button class="greyButton">8</button>
                    <button class="greyButton">9</button>
                    <button class="greyButton">DEL</button>
                    <button class="greyButton">CLR</button>

                    <button class="greyButton">4</button>
                    <button class="greyButton">5</button>
                    <button class="greyButton">6</button>
                    <button class="whiteButton">x</button>
                    <button class="whiteButton">&#247</button>

                    <button class="greyButton">1</button>
                    <button class="greyButton">2</button>
                    <button class="greyButton">3</button>
                    <button class="whiteButton">+</button>
                    <button class="whiteButton">-</button>

                    <button class="greyButton">S⇔D</button>
                    <button class="greyButton">0</button>
                    <button class="greyButton">.</button>
                    <button class="whiteButton">Ans</button>
                    <button class="blueButton">=</button>

                </div>
            </div>
        </div>
        <div class="rightSide">
            <h4>Log</h4>
            <div class="historyContainer">

            </div>
        </div>
    </div>
</body>

